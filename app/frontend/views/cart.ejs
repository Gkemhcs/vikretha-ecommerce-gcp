<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vikretha - Cart</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Custom styles */
    .navbar-brand {
      font-weight: bold;
    }

    .product-card {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
    }

    .product-card img {
      max-width: 100px;
      margin-right: 10px;
    }

    .product-details {
      flex: 1;
    }

  
    .delete-btn {
      background-color: #dc3545;
      color: #fff;
      border: none;
      padding: 5px 10px;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .delete-btn:hover {
      background-color: #c82333;
    }

   
    .buy-now {
      margin-top: 10px;
      text-align: center;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Vikretha</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Cart content -->
  <div class="container mt-4">
    <h2>Your Cart</h2>
    <%  items.forEach((item)=>{ %>
    <div class="product-card">
        <img src="<%= item.imgurl %>" alt="Product 1">
        <div class="product-details">
          <h4><%= item.product_name %></h4>
          <p>&#8377; <%= item.price %></p>
        </div>

       
        <div class="buy-now mt-2">
            <a href="/buy/product/<%= item.product_id %>">  <button class="btn btn-success" >Buy Now</button></a>
           <a href="/cart/cancel/<%= item.product_id %>"> <button class="delete-btn">Delete</button></a>
        </div>
        
      </div>
      <% })   %>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  
</body>

</html>
